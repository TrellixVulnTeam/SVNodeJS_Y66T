<div class="container mt-4 mb-4">
    <h3>Thông tin sinh viên</h3>
    <a href="/add" class="btn btn-success mb-4">Add student</a>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">STT</th>
      <th scope="col">NAME</th>
      <th scope="col">AGE</th>
        <th scope="col">ACTIONS</th>
    </tr>
  </thead>
  <tbody>
      {{#each data}}
          <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.name}}</td>
      <td>{{this.age}}</td>
      <td>
            <a href="/edit/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
      </td>
    </tr>
        {{/each}}
  </tbody>
</table>
</div>